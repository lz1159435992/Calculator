<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zheng.calculator.ChangeActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="600dp"
        android:columnCount="7"
        android:rowCount="8">

        <TextView
            android:id="@+id/text_anglechange"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_columnSpan="6"
            android:text="角度转化"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/edit_du"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/text_du"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center_horizontal"
            android:text="度(°) =" />

        <EditText
            android:id="@+id/edit_pi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/text_pi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="π    ="
            android:gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="3"/>
        <EditText
            android:id="@+id/edit_rad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="4"/>
        <TextView
            android:id="@+id/text_rad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="弧度(rad)"
            android:gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="5"/>

        <TextView
            android:id="@+id/text_changdu"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_row="2"
            android:gravity="center_horizontal"
            android:text="长度转化" />
        <EditText
            android:id="@+id/edit_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="3"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/text_m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center_horizontal"
            android:text="米(m)  =" />
        <EditText
            android:id="@+id/edit_ft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="3"
            android:layout_column="2"/>

        <TextView
            android:id="@+id/text_ft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_row="3"
            android:gravity="center_horizontal"
            android:text="英尺(ft)=" />
        <EditText
            android:id="@+id/edit_chi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="3"
            android:layout_column="4"/>
        <TextView
            android:id="@+id/text_chi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="尺"
            android:gravity="center_horizontal"
            android:layout_row="3"
            android:layout_column="5"/>

        <TextView
            android:id="@+id/text_zhongliang"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_row="4"
            android:gravity="center_horizontal"
            android:text="重量转化" />
        <EditText
            android:id="@+id/edit_kg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="5"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/text_kg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="千克(kg)="
            android:gravity="center_horizontal"
            android:layout_row="5"
            android:layout_column="1"/>
        <EditText
            android:id="@+id/edit_lb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="5"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/text_lb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="磅(lb) ="
            android:gravity="center_horizontal"
            android:layout_row="5"
            android:layout_column="3"/>
        <EditText
            android:id="@+id/edit_oz"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="5"
            android:layout_column="4"/>

        <TextView
            android:id="@+id/text_oz"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="5"
            android:layout_row="5"
            android:gravity="center_horizontal"
            android:text="盎司(oz)" />

        <TextView
            android:id="@+id/text_wendu"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_row="6"
            android:gravity="center_horizontal"
            android:text="温度转换" />
        <EditText
            android:id="@+id/edit_c"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="7"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/text_c"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="摄氏度(℃)="
            android:gravity="center_horizontal"
            android:layout_row="7"
            android:layout_column="1"/>
        <EditText
            android:id="@+id/edit_f"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="7"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/text_f"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="华氏度(℉) ="
            android:gravity="center_horizontal"
            android:layout_row="7"
            android:layout_column="3"/>
        <EditText
            android:id="@+id/edit_k"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_row="7"
            android:layout_column="4"/>

        <TextView
            android:id="@+id/text_k"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="5"
            android:layout_row="7"
            android:gravity="center_horizontal"
            android:text="开氏度(K)" />
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"  >
    <Button
        android:id="@+id/doit"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:text="转换" />
        <Button
            android:id="@+id/cleanit"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:text="清空" />
    </LinearLayout>
</LinearLayout>
